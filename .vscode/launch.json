{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Store Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pkg/models",
            "args": [
                "-test.v"
            ],
            "env": {}
        },
        {
            "name": "Debug All Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.v"
            ],
            "env": {},
            "showLog": true
        },
        {
            "name": "Debug Specific Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pkg/models",
            "args": [
                "-test.run",
                "TestStore_CreateService",
                "-test.v"
            ],
            "env": {},
            "showLog": true
        },
        {
            "name": "Debug Catalog API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/catalog",
            "env": {
                "ENV": "local"
            },
            "args": [],
            "showLog": true
        },
        {
            "name": "Debug Catalog API (Docker Config)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/catalog",
            "env": {
                "ENV": "docker",
                "DATABASE_URL": "postgres://catalog_user:catalog_password@localhost:5432/kong_catalog?sslmode=disable"
            },
            "args": [],
            "showLog": true
        },
        {
            "name": "Debug Tests with Coverage",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pkg/models",
            "args": [
                "-test.v",
                "-test.coverprofile=coverage.out"
            ],
            "env": {},
            "showLog": true
        }
    ]
}